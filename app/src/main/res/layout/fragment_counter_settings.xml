<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.zickr.counter.CounterSettingsFragment">

    <TextView
        android:id="@+id/counter_settings2"
        android:layout_width="352dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/conturdesc"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:text="@string/settings"
        android:textAllCaps="true"
        android:textColor="@color/purple_300"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/green_cursor"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="339dp"
        android:layout_height="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159">

        <TextView
            android:id="@+id/titleOneClick2"
            android:layout_width="339dp"
            android:layout_height="59dp"
            android:background="@drawable/contur_text_rect"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:text="Однократное нажатие"
            android:textAllCaps="true"
            android:textColor="@color/purple_300"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/green_cursor"
            android:textSize="17sp"
            android:textStyle="normal" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>