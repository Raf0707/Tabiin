    <ToggleButton
        android:id="@+id/enableLongVibriateEndGeneral"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:background="@drawable/conturdesc"
        android:shadowColor="@color/white"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1.6"
